        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>vars-jpa</artifactId>
    <name>vars-jpa [Library]</name>
<!--
    Build settings
-->
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generateStubs</goal>
                            <goal>compile</goal>
                            <goal>generateTestStubs</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <filters>
            <filter>src/main/filters/${environment}.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
<!--
    Dependencies
-->
    <dependencies>
        <dependency>
            <groupId>vars-redux</groupId>
            <artifactId>vars-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mbari</groupId>
            <artifactId>jpax</artifactId>
            <version>[1.1-SNAPSHOT,)</version>
        </dependency>
        <dependency>
