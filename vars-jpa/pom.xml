        </dependency>
        <dependency>
            <groupId>org.apache.derby</groupId>
            <artifactId>derbyclient</artifactId>
            <version>[10.5.1.1,)</version>
        </dependency>
        <dependency>
            <groupId>org.mbari</groupId>
