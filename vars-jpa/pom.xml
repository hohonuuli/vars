            <version>[2.0-SNAPSHOT,)</version>
        </dependency>
        <dependency>
            <groupId>javax.persistence</groupId>
            <artifactId>persistence-api</artifactId>
            <version>[1.0,)</version>
            <scope>provided</scope>
        </dependency>
