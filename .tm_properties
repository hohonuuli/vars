excludeFiles = "$exclude,*.class"
excludeDirectories = "**/{target,build}"
includeFilesInBrowser = "**/{.gitignore,.travis.yml}"

showInvisibles = true
spellChecking  = false

[ text.plain ]
softWrap       = true
wrapColumn     = "Use Window Frame"
softTabs       = false
tabSize        = 8
spellChecking  = true

# special per-filetype rules can be specified like so:
[ text.html.markdown ]
softWrap       = true
wrapColumn     = "Use Window Frame"
softTabs       = true
tabSize        = 4
spellChecking  = true